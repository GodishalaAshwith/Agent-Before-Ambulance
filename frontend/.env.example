# Agent Before Ambulance - Frontend Environment Configuration
# Copy this file to .env and update with your values

# ===========================================
# API Configuration
# ===========================================

# Backend API URL (without trailing slash)
# Development: http://localhost:8001
# Production: https://api.yourdomain.com
VITE_API_URL=http://localhost:8001

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=10000

# Maximum API Retry Attempts
VITE_MAX_RETRIES=3

# Retry Delay (milliseconds)
VITE_RETRY_DELAY=1000

# ===========================================
# Application Configuration
# ===========================================

# Application Name
VITE_APP_NAME=Agent Before Ambulance

# Application Short Name (for PWA)
VITE_APP_SHORT_NAME=ABA

# Application Version
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_ENV=development

# ===========================================
# Feature Flags
# ===========================================

# Enable/Disable Voice Recognition
VITE_ENABLE_VOICE=true

# Enable/Disable Speech Synthesis
VITE_ENABLE_SPEECH_SYNTHESIS=true

# Enable/Disable Session Persistence
VITE_ENABLE_SESSION_PERSISTENCE=true

# Enable/Disable Offline Detection
VITE_ENABLE_OFFLINE_DETECTION=true

# Enable/Disable Notifications
VITE_ENABLE_NOTIFICATIONS=true

# ===========================================
# Analytics & Monitoring (Optional)
# ===========================================

# Google Analytics Measurement ID
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for Error Tracking
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Enable Debug Mode
VITE_DEBUG=false

# ===========================================
# PWA Configuration
# ===========================================

# Theme Color
VITE_THEME_COLOR=#ef4444

# Background Color
VITE_BG_COLOR=#0f172a

# ===========================================
# Speech Recognition Settings
# ===========================================

# Speech Recognition Language
VITE_SPEECH_LANG=en-US

# Speech Recognition Confidence Threshold (0.0 - 1.0)
VITE_SPEECH_CONFIDENCE_THRESHOLD=0.5

# Speech Synthesis Rate (0.1 - 10)
VITE_SPEECH_RATE=0.9

# Speech Synthesis Pitch (0 - 2)
VITE_SPEECH_PITCH=1.0

# Speech Synthesis Volume (0 - 1)
VITE_SPEECH_VOLUME=1.0

# ===========================================
# Session Configuration
# ===========================================

# Session Storage Key
VITE_SESSION_STORAGE_KEY=aba_session_id

# Session Timeout (milliseconds, 0 = no timeout)
VITE_SESSION_TIMEOUT=0

# ===========================================
# UI Configuration
# ===========================================

# Notification Auto-Dismiss Duration (milliseconds)
VITE_NOTIFICATION_DURATION=5000

# Enable Animations
VITE_ENABLE_ANIMATIONS=true

# ===========================================
# Security
# ===========================================

# Enable HTTPS Redirect (production only)
VITE_FORCE_HTTPS=false

# Allowed Origins (comma-separated)
# VITE_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
